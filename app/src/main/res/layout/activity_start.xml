<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPeerToPeer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Peer To Peer"
        android:layout_margin="20dp"
        android:onClick="startPeerToPeer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpleSocket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample Socket"
        android:layout_marginTop="20dp"
        android:onClick="startPeerToPeer"
        app:layout_constraintEnd_toEndOf="@+id/btnPeerToPeer"
        app:layout_constraintStart_toStartOf="@+id/btnPeerToPeer"
        app:layout_constraintTop_toBottomOf="@+id/btnPeerToPeer" />

</androidx.constraintlayout.widget.ConstraintLayout>